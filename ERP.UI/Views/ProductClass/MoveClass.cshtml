@model ProductClassModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>表单组合</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/LayUI/layuiAdmin/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/LayUI/layuiAdmin/layuiadmin/style/admin.css" rel="stylesheet" />
    <style type="text/css">
        .text{line-height:38px;}
    </style>
</head>
<body onload="">

    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-header">商品分类添加</div>
            <div class="layui-card-body" style="padding: 15px;">
                <form class="layui-form" action="" lay-filter="component-form-group">
                    <div class="layui-form-item">
                        <label class="layui-form-label proclass">当前分类</label>
                        <div class="layui-input-block text">
                            @Model.ClassName

                            @Html.HiddenFor(m => m.ClassID)
                            <input type="hidden" id="TargetId" name="TargetId" />
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">目标分类</label>
                        <div class="layui-input-block text" id="targetClass">
                            暂无
                        </div>
                    </div>

                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">分类选择</label>
                        <div class="layui-input-block">
                            <div id="proclass"></div>
                        </div>
                    </div>
                    <div class="layui-form-item layui-layout-admin">
                        <div class="layui-input-block">
                            <div class="layui-footer" style="left: 0;">
                                <button class="layui-btn" lay-submit="" lay-filter="component-form-demo1">移动分类</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/LayUI/layuiAdmin/layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/LayUI/layuiAdmin/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'form', 'laydate', 'tree'], function () {
            var tree = layui.tree;
            var form = layui.form;

            $.ajax({
                url: "@Url.Action("TreeData")",
                type: "get",
                dataType: "json",
                success: function (d) {
                    //渲染
                    var inst1 = tree.render({
                        elem: '#proclass'  //绑定元素
                        , data: d
                        , click: function (obj) {
                            var data = obj.data;
                            $("#targetClass").text(data.title).css("color", "red");
                            $("#TargetId").val(data.id);
                        }
                    });
                }
            })

            form.on('submit(component-form-demo1)', function (data) {
                $.ajax({
                    url: "@Url.Action("MoveClass")",
                    type: "post",
                    dataType: "json",
                    data: data.field,
                    success: function (d) {
                        layer.msg(d.message, {
                            icon: d.code == 0 ? 1 : 4,
                            time: 2000
                        }, function () {
                            if (d.code == 0) {
                                window.location.reload();
                            }
                        });
                    }
                })

                return false;
            });
        });
    </script>
</body>
</html>
